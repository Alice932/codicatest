<%= render "card", patient: @patient %>
<% if can? :update, @patient %>
  <%= link_to "Edit", edit_patient_path(@patient), class: 'btn btn-warning m-1' %>
<% end %>
<% if can? :destroy, @patient %>
  <%= button_to "Delete", patient_path(@patient), method: :delete, data: { confirm: "Вы хотите удалить пациента из системы?" }, class: 'btn btn-danger' %>
<% end %>
